<Page x:Class="RaspberryNote.PageFileStore"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RaspberryNote"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Файловое хранилище">



    <Grid Margin="0,10,10,0" Background="#FFEDFA">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Файловое хранилище" 
                   FontSize="24" 
                   Foreground="#BA487F" 
                   HorizontalAlignment="Center" 
                   Margin="0,10,0,10"  
                   FontFamily="Cascadia Code"
                   Grid.Column="1"/>

        <StackPanel Grid.Row="1" 
                    Grid.Column="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,10,0,10">
           
        </StackPanel>

        <StackPanel
            Grid.Row="2"
            Grid.Column="0"
            >
            <Button x:Name="NavButtonBack" 
            Grid.Column="0" 
            Grid.Row="2"  
            Click="BackButton_Click" 
            BorderBrush="#FFEDFA" 
            Background="Transparent" 
            FontFamily="Cascadia Code" 
            Margin="0,0,0,0">
                <StackPanel Orientation="Vertical">
                    <Image Source="/images/back.png" Width="80" Height="80"/>
                    <TextBlock Text="Назад" 
                       FontSize="14" 
                       HorizontalAlignment="Center" 
                       FontWeight="Bold" 
                       Foreground="#BA487F"/>
                </StackPanel>
            </Button>
            <Button x:Name="AddFileButton" 
    Grid.Column="0" 
    Grid.Row="2"  
    Click="AddFileButton_Click" 
    BorderBrush="#FFEDFA" 
    Background="Transparent" 
    FontFamily="Cascadia Code" 
    Margin="0,20,0,0">
                <StackPanel Orientation="Vertical">
                    <Image Source="/images/addfilestore.png" Width="80" Height="80"/>
                    <TextBlock Text="Добавить" 
               FontSize="14" 
               HorizontalAlignment="Center" 
               FontWeight="Bold" 
               Foreground="#BA487F"/>
                </StackPanel>
            </Button>

        </StackPanel>


        <ScrollViewer Grid.Row="2" 
              Grid.Column="1" 
              VerticalScrollBarVisibility="Auto"
              HorizontalScrollBarVisibility="Disabled"
              Margin="10,0,0,0">
            <ListBox x:Name="FilesListBox" 
             ItemsSource="{Binding Files}"
             Background="Transparent"
             BorderThickness="0"
             SelectedItem="{Binding SelectedFile, Mode=TwoWay}"
             SelectionMode="Single">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#FFF5FC" 
                        BorderBrush="#BA487F" 
                        BorderThickness="1" 
                        CornerRadius="10"
                        Margin="0,5,0,5"
                        Padding="15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Image Source="/images/file_icon.png" 
                               Width="32" 
                               Height="32"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"/>

                                <StackPanel Grid.Column="1" 
                                    VerticalAlignment="Center">
                                    <TextBlock Text="{Binding FileName}" 
                                       FontFamily="Cascadia Code"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="#BA487F"
                                       TextWrapping="Wrap"/>
                                    <StackPanel Orientation="Horizontal" 
                                        Margin="0,5,0,0">
                                        <TextBlock Text="{Binding FileSizeFormatted}" 
                                           FontFamily="Cascadia Code"
                                           FontSize="11"
                                           Foreground="#888"/>
                                        <TextBlock Text=" • " 
                                           FontFamily="Cascadia Code"
                                           FontSize="11"
                                           Foreground="#888"/>
                                        <TextBlock Text="{Binding CreatedDate, StringFormat='dd.MM.yyyy HH:mm'}" 
                                           FontFamily="Cascadia Code"
                                           FontSize="11"
                                           Foreground="#888"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding LinkedTask}" 
                                       FontFamily="Cascadia Code"
                                       FontSize="11"
                                       Foreground="#555"
                                       FontStyle="Italic"
                                       Margin="0,3,0,0"/>
                                </StackPanel>

                                <Button Grid.Column="2"
                                Content="📂" 
                                Foreground="#BA487F"
                                Background="Transparent" 
                                BorderThickness="0"
                                FontSize="16"
                                Padding="8,4"
                                Margin="10,0,5,0"
                                ToolTip="Открыть файл"
                                Command="{Binding OpenFileCommand}"/>

                                <Button Grid.Column="3"
                                Content="🗑️" 
                                Foreground="#BA487F"
                                Background="Transparent" 
                                BorderThickness="0"
                                FontSize="16"
                                Padding="8,4"
                                Margin="5,0,0,0"
                                ToolTip="Удалить файл"
                                Command="{Binding DeleteFileCommand}"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>

                <ListBox.Resources>
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" 
                             Color="Transparent"/>
                    <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" 
                             Color="Transparent"/>
                </ListBox.Resources>

                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <ContentPresenter/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FFD1EC"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </ScrollViewer>

        <Border Grid.Row="3" 
        Grid.Column="1" 
        Background="#FFF5FC" 
        BorderBrush="#BA487F" 
        BorderThickness="1" 
        CornerRadius="10"
        Margin="10,10,0,10"
        Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Связать с задачей:" 
                   FontFamily="Cascadia Code"
                   Foreground="#BA487F"
                   VerticalAlignment="Center"
                   Margin="0,0,15,0"/>

                <ComboBox x:Name="TasksComboBox" 
                  Grid.Column="1"
                  FontFamily="Cascadia Code"
                  Margin="0,0,15,0"/>

                <Button x:Name="LinkTaskButton" 
                Grid.Column="2"
                Content="Связать" 
                Background="#BA487F" 
                Foreground="White" 
                FontFamily="Cascadia Code"
                FontWeight="Bold"
                Padding="15,5"
                Click="LinkTaskButton_Click"/>
            </Grid>
        </Border>

    </Grid>
</Page>