<Page x:Class="RaspberryNote.PageFolder1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RaspberryNote"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageFolder1" 
    >
    <Page.Background>
        <ImageBrush ImageSource="/images/background_page.png" 
   Stretch="UniformToFill"/>
    </Page.Background>

    <Grid Margin="0,10,10,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="600"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        

        <TextBlock Text="Текущие задачи" 
           FontSize="24" Foreground="#BA487F" 
           HorizontalAlignment="Center" 
           Margin="0,10,0,10"  FontFamily="Cascadia Code"
                   Grid.Column="1"/>

        <DataGrid x:Name="dataGrid" AutoGenerateColumns="False" Margin="10,10,5,0" Grid.Row="1" Grid.Column="1"
                  HeadersVisibility="None"
                  CanUserAddRows="False"
                   VerticalAlignment="Top">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID задачи" Binding="{Binding TaskID}" Width="150"/>
                <DataGridTextColumn Header="Описание" Binding="{Binding TaskDescription}" Width="250"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding TaskStatus}" Width="170"/>
                <DataGridTextColumn Header="Клиент" Binding="{Binding TaskFrom}" Width="170"/>
                <DataGridTextColumn Header="Юрист" Binding="{Binding LawyerFIO}" Width="170"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" 
            Orientation="Horizontal" 
            HorizontalAlignment="Center" 
            Margin="0,10,0,10" Grid.Column="1" >
           
        </StackPanel>
    </Grid>
</Page>
