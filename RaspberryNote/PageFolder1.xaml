<Page x:Class="RaspberryNote.PageFolder1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RaspberryNote"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageFolder1">

    <Grid Margin="0,10,10,0" Background="#FFEDFA">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="600"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Текущие задачи" 
           FontSize="24" Foreground="#BA487F" 
           HorizontalAlignment="Center" 
           Margin="0,10,0,10"  FontFamily="Cascadia Code"
                   Grid.Column="1"/>

        <Button x:Name="NavButton1" Grid.Column="0" Grid.Row="1"  Click="BackButton_Click" BorderBrush="#FFEDFA" Background="Transparent" FontFamily="Cascadia Code" Margin="0,0,0,0" VerticalAlignment="Top">
            <StackPanel Orientation="Vertical" >
                <Image Source="/images/back.png" Width="80" Height="80"/>
                <TextBlock Text="Назад" FontSize="14" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#BA487F"/>
            </StackPanel>
        </Button>

        <DataGrid x:Name="dataGrid" AutoGenerateColumns="False" Margin="0,0,15,0" Grid.Row="1" Grid.Column="1"
          HeadersVisibility="Column"
          CanUserAddRows="False"
          CanUserDeleteRows="False"
          CanUserResizeColumns="True"
          CanUserSortColumns="True"
          IsReadOnly="True"
          SelectionMode="Single"
          Background="Transparent"
          SelectionChanged="dataGrid_SelectionChanged">

            <DataGrid.Resources>
                <Style TargetType="DataGridCell">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Padding" Value="8"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#FF3D7BFF"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>

                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#BA487F"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Height" Value="35"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="BorderBrush" Value="#BA487F"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.Resources>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="#FFEDFA"/>
                    <Setter Property="Padding" Value="8"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="Height" Value="25"/>
                    
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Описание задачи" Binding="{Binding NoteDescription}" Width="220"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding NoteState}" Width="140"/>
                <DataGridTextColumn Header="Дэдлайн" Binding="{Binding NoteFinishDate, StringFormat=dd.MM.yyyy}" Width="100"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding NoteCategory}" Width="130"/>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="2" Grid.Column="1" Background="White" Margin="0,5,15,15" 
                BorderBrush="#BA487F" BorderThickness="1" CornerRadius="5" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                </Grid.RowDefinitions>

                <TextBox x:Name="txtDescription" Grid.Column="0" Grid.ColumnSpan="6"  Grid.Row="0" Margin="0,0,0,5" 
                          FontFamily="Cascadia Code" FontSize="12"
                         Foreground="Gray" VerticalContentAlignment="Center"/>

                <ComboBox x:Name="cmbState" Grid.Column="1" Grid.Row="1" Margin="0,0,0,2" FontFamily="Cascadia Code" FontSize="12"
                          VerticalContentAlignment="Center">
                    <ComboBoxItem>Запланирована</ComboBoxItem>
                    <ComboBoxItem>Выполняется</ComboBoxItem>
                    <ComboBoxItem>Завершена</ComboBoxItem> 
                </ComboBox>

                <DatePicker x:Name="dpFinishDate" Grid.Column="2" Grid.Row="1" Margin="0,0,0,2" 
                           FontFamily="Cascadia Code" FontSize="12"
                           VerticalContentAlignment="Center"
                           SelectedDateFormat="Short"
                           Language="ru-RU"/>


                 <ComboBox x:Name="CategoryComboBox" 
           FontSize="12"
           Height="30"
             Grid.Row="1" Grid.Column="3" Margin="0,0,0,2"
           SelectionChanged="CategoryComboBox_SelectionChanged"/>

                <Button x:Name="btnAdd" Grid.Column="4" Grid.Row="1" Margin="5" Content="Добавить" 
                        Background="#BA487F" Foreground="White" FontFamily="Cascadia Code" FontSize="11"
                        Click="AddButton_Click"
                        
                        />

                <Button x:Name="btnEdit" Grid.Column="5" Grid.Row="1" Margin="5" Content="Изменить" 
                        Background="#FF9575CD" Foreground="White" FontFamily="Cascadia Code" FontSize="11"
                        Click="EditButton_Click"
                        />

                <Button x:Name="btnDelete" Grid.Column="6" Grid.Row="1" Margin="5" Content="Удалить" 
                        Background="#FF5252" Foreground="White" FontFamily="Cascadia Code" FontSize="11"
                        Click="DeleteButton_Click"/>
            </Grid>
        </Border>

      

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Column="1"/>
    </Grid>
</Page>