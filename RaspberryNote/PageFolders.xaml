<Page x:Class="RaspberryNote.PageFolders"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RaspberryNote"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageFolders">
    <Grid>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,30">

            <Button x:Name="BtnFolder1" Click="SubPageButton_Click" BorderBrush="#FFEDFA" Background="#FFEDFA"  FontFamily="Cascadia Code" Margin="20,0,20,0">
              
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="/Images/in_folder.png" Width="90" Height="90"/>
                    <TextBlock Text="Папка 1" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,0" Foreground="#BA487F" FontWeight="Bold"/>
                </StackPanel>
            </Button>

            <Button x:Name="BtnFolder2" Click="SubPageButton_Click" BorderBrush="#FFEDFA" Background="#FFEDFA"  FontFamily="Cascadia Code" Margin="20,0,20,0">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="/images/in_folder.png" Width="90" Height="90"/>
                    <TextBlock Text="Папка 2" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,0" Foreground="#BA487F" FontWeight="Bold"/>
                </StackPanel>
            </Button>

            <Button x:Name="BtnFolder3" Click="SubPageButton_Click" BorderBrush="#FFEDFA" Background="#FFEDFA"  FontFamily="Cascadia Code" Margin="20,0,20,0">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="/Images/in_folder.png" Width="90" Height="90"/>
                    <TextBlock Text="Папка 3" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,0" Foreground="#BA487F" FontWeight="Bold"/>
                </StackPanel>
            </Button>

        </StackPanel>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" />
    </Grid>
    
</Page>
