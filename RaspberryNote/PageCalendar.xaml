                </Border>
            </Grid>
        </ScrollViewer>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,10,0,10" 
                    Grid.Column="1">
        </StackPanel>

        <Frame x:Name="MainFrame" 
               NavigationUIVisibility="Hidden" 
               Grid.Column="1"
               Grid.RowSpan="3"/>
    </Grid>
</Page>
