                                    <Setter Property="Padding" Value="5"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="Height" Value="25"/>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Ивент" Binding="{Binding DNoteDescription}" Width="100"/>
                                <DataGridTextColumn Header="Категория" Binding="{Binding DNoteCategory}" Width="70"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Button x:Name="AddFridayBtn" 
Click="AddEventButton_Click" 
Tag="Friday_Пятница"
BorderBrush="Transparent" 
Background="Transparent" 
HorizontalAlignment="Center"

Width="40" Height="40">
                            <Image Source="images/plus.png" Width="30" Height="30"/>
                        </Button>

                    </StackPanel>
                </Border>

                <Border Grid.Row="1" Grid.Column="1" Margin="2" Background="Transparent" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Суббота" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#BA487F" 
                                   HorizontalAlignment="Center" 
                                   Margin="5" 
                                   FontFamily="Cascadia Code"/>
                        <DataGrid x:Name="SaturdayGrid" 
           AutoGenerateColumns="False" 
           Margin="5" 
           Height="200"
           Width="170"
           HeadersVisibility="Column"
           CanUserAddRows="False"
           CanUserDeleteRows="False"
           CanUserResizeColumns="True"
           CanUserSortColumns="True"
           IsReadOnly="True"
           SelectionMode="Single"
           Background="Transparent"
                                  SelectionChanged="DataGrid_SelectionChanged">
                            <DataGrid.Resources>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#e0609e"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#BA487F"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="FontFamily" Value="Cascadia Code"/>
                                    <Setter Property="Height" Value="30"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="FontSize" Value="10"/>
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="#FFEDFA"/>
                                    <Setter Property="Padding" Value="5"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="Height" Value="25"/>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Ивент" Binding="{Binding DNoteDescription}" Width="100"/>
                                <DataGridTextColumn Header="Категория" Binding="{Binding DNoteCategory}" Width="70"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Button x:Name="AddSaturdayBtn" 
Click="AddEventButton_Click" 
Tag="Saturday_Суббота"
BorderBrush="Transparent" 
Background="Transparent" 
HorizontalAlignment="Center"

Width="40" Height="40">
                            <Image Source="images/plus.png" Width="30" Height="30"/>
                        </Button>

                    </StackPanel>
                </Border>

                <Border Grid.Row="1" Grid.Column="2" Margin="2" Background="Transparent" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Воскресенье" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#BA487F" 
                                   HorizontalAlignment="Center" 
                                   Margin="5" 
                                   FontFamily="Cascadia Code"/>
                        <DataGrid x:Name="SundayGrid" 
           AutoGenerateColumns="False" 
           Margin="5" 
           Height="200"
           Width="170"
           HeadersVisibility="Column"
           CanUserAddRows="False"
           CanUserDeleteRows="False"
           CanUserResizeColumns="True"
           CanUserSortColumns="True"
           IsReadOnly="True"
           SelectionMode="Single"
           Background="Transparent"
