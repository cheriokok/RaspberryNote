                                </Style>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#BA487F"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="FontFamily" Value="Cascadia Code"/>
                                    <Setter Property="Height" Value="30"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="FontSize" Value="10"/>
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="#FFEDFA"/>
                                    <Setter Property="Padding" Value="5"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="Height" Value="25"/>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Ивент" Binding="{Binding DNoteDescription}" Width="100"/>
                                <DataGridTextColumn Header="Категория" Binding="{Binding DNoteCategory}" Width="70"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Button x:Name="AddSundayBtn" 
Click="AddEventButton_Click" 
  Tag="Sunday_Воскресенье"                              
BorderBrush="Transparent" 
Background="Transparent" 
HorizontalAlignment="Center"

Width="40" Height="40">
                            <Image Source="images/plus.png" Width="30" Height="30"/>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,10,0,10" 
                    Grid.Column="1">
        </StackPanel>

        <Frame x:Name="MainFrame" 
               NavigationUIVisibility="Hidden" 
               Grid.Column="1"
               Grid.RowSpan="3"/>
    </Grid>
</Page>
