<Page x:Class="RaspberryNote.PageCalendar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RaspberryNote"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="850"
      Title="PageCalendar">



    <Grid  Background="#FFEDFA">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Расписание на неделю" 
                   FontSize="24" 
                   Foreground="#BA487F" 
                   HorizontalAlignment="Center" 
                   Margin="0,10,0,10"  
                   FontFamily="Cascadia Code"
                   Grid.Column="1"/>

        <Button x:Name="NavButton1" 
                Grid.Column="0" 
                Grid.Row="1"  
                Click="BackButton_Click" 
                BorderBrush="#FFEDFA" 
                Background="Transparent" 
                FontFamily="Cascadia Code" 
               VerticalAlignment="Top">
            <StackPanel Orientation="Vertical">
                <Image Source="/images/back.png" Width="80" Height="80"/>
                <TextBlock Text="Назад" 
                           FontSize="14" 
                           HorizontalAlignment="Center" 
                           FontWeight="Bold" 
                           Foreground="#BA487F"/>
            </StackPanel>
        </Button>
        <Button x:Name="DeleteButton" 
                Grid.Column="0" 
                Grid.Row="1"  
                Click="DeleteButton_Click" 
                BorderBrush="#FFEDFA" 
                Background="Transparent" 
                FontFamily="Cascadia Code" 
               VerticalAlignment="Top"
               Margin="0,120,0,0">
            <StackPanel Orientation="Vertical">
                <Image Source="/images/delete.png" Width="80" Height="80"/>
                <TextBlock Text="Удалить" 
                           FontSize="14" 
                           HorizontalAlignment="Center" 
                           FontWeight="Bold" 
                           Foreground="#BA487F"/>
            </StackPanel>
        </Button>

        <ScrollViewer Grid.Row="1" 
                      Grid.Column="1" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto"
                      >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Row="0" Grid.Column="0" Margin="2" Background="Transparent" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Понедельник" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Foreground="#BA487F" 
                   HorizontalAlignment="Center" 
                   Margin="5" 
                   FontFamily="Cascadia Code"/>
                        <DataGrid x:Name="MondayGrid" 
                  AutoGenerateColumns="False" 
                  Margin="5" 
                  Height="200"
                  Width="170"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserResizeColumns="True"
                  CanUserSortColumns="True"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  Background="Transparent"
                                  SelectionChanged="DataGrid_SelectionChanged">
                            <DataGrid.Resources>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="#e0609e"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#BA487F"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="FontFamily" Value="Cascadia Code"/>
                                    <Setter Property="Height" Value="30"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="FontSize" Value="10"/>
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="#FFEDFA"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                    <Setter Property="Height" Value="25"/>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Ивент" Binding="{Binding DNoteDescription}" Width="100"/>
                                <DataGridTextColumn Header="Категория" Binding="{Binding DNoteCategory}" Width="70"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Button x:Name="AddMondayBtn" 
                Click="AddEventButton_Click" 
                Tag="Monday_Понедельник"
                BorderBrush="Transparent" 
                Background="Transparent" 
                HorizontalAlignment="Center"
                
                Width="40" Height="40">
                            <Image Source="images/plus.png" Width="30" Height="30"/>
                        </Button>
                    </StackPanel>
                </Border>

                <Border Grid.Row="0" Grid.Column="1" Margin="2" Background="Transparent" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Вторник" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#BA487F" 
                                   HorizontalAlignment="Center" 
                                   Margin="5" 
                                   FontFamily="Cascadia Code"/>
